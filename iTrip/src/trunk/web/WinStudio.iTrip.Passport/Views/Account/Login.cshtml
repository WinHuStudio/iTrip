@model WinStudio.iTrip.Passport.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}
<form class="form-horizontal" action="/Account/Login" method="post">
    <div class="control-group">
        <label class="control-label" for="inputAccount">Account</label>
        <div class="controls">
            <input type="text" id="inputAccount" name="UserAccount" placeholder="Account" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">Password</label>
        <div class="controls">
            <input type="password" id="inputPassword" name="Password" placeholder="Password" />
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox">
                Remember me
            </label>
            <button type="submit" class="btn">Sign in</button>
            <input type="hidden" id="next" name="next" value="@ViewBag.Next" />
        </div>
    </div>
</form>
